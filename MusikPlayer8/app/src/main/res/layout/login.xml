<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#272728"
    tools:context=".Login">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/logologin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtusername"
        android:layout_width="364dp"
        android:layout_height="50dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/custom_edt_login"
        android:ems="10"
        android:hint="    Nhập Username"
        android:inputType="textPersonName"
        android:textColor="#DACECE"
        android:textColorHint="#DACECE"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtpassword"
        android:layout_width="364dp"
        android:layout_height="50dp"
        android:layout_marginTop="324dp"
        android:background="@drawable/custom_edt_login"
        android:ems="10"
        android:hint="    Nhập Password"
        android:inputType="textPersonName"
        android:textColor="#DACECE"
        android:textColorHint="#DACECE"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="265dp"
        android:layout_height="45dp"
        android:layout_marginTop="424dp"
        android:background="@drawable/custom_button_login"
        app:backgroundTint = "@null"
        android:text="Đăng Nhập"
        android:textColor="#ffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btndangki"
        android:layout_width="265dp"
        android:layout_height="40dp"
        android:layout_marginTop="484dp"
        android:background="@drawable/custom_btn_dangki"
        android:text="Đăng Kí"
        android:textColor="#ffff"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>