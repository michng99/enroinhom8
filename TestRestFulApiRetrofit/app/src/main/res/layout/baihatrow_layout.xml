<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_margin="6dp"
    card_view:cardCornerRadius="12dp"
    card_view:contentPadding="12dp"
    card_view:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="#000000"
            android:id="@+id/tenBaiHat"
            android:textSize="20sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="#000000"
            android:id="@+id/tacGia"
            android:layout_below="@id/tenBaiHat"
            android:textSize="20sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="#000000"
            android:id="@+id/baiHatURL"
            android:layout_below="@id/tacGia"
            android:textSize="20sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="#000000"
            android:id="@+id/hinhAnh"
            android:layout_below="@id/baiHatURL"
            android:textSize="20sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="#000000"
            android:id="@+id/thoiLuong"
            android:layout_below="@id/hinhAnh"
            android:textSize="20sp"
            android:gravity="center"/>



    </RelativeLayout>




</androidx.cardview.widget.CardView>